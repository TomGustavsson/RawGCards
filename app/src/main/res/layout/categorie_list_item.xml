<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="categorie"
            type="com.tomgu.rawgcards.main.categoriedialog.Categorie" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/categorieRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="false"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_list_item"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/categorie_imageview"
                android:paddingStart="10dp"
                android:padding="5dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                app:loadImageResource="@{categorie.image}"/>

            <TextView
                android:id="@+id/categorie_textview"
                android:layout_gravity="center"
                android:paddingStart="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{categorie.name}"
                android:fontFamily="@font/wallpoet"
                android:textColor="#000"
                android:textSize="18sp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

</layout>